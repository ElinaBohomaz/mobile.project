<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SimpleBrowserApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:statusBarColor">@color/bg</item>
        <item name="android:navigationBarColor">@color/bg</item>
        <item name="android:windowBackground">@color/bg</item>
    </style>
    <style name="Widget.Simple.IconBtn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="strokeColor">@color/stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:backgroundTint">@color/panel</item>
        <item name="rippleColor">@color/stroke</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
</resources>
