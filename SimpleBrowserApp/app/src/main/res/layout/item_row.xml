<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginBottom="10dp"
                                                   app:cardCornerRadius="18dp"
                                                   app:cardElevation="0dp"
                                                   app:strokeColor="@color/stroke"
                                                   app:strokeWidth="1dp"
                                                   app:cardBackgroundColor="@color/card">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

        <TextView
                android:id="@+id/rowTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/rowDelete"/>

        <TextView
                android:id="@+id/rowUrl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/rowTitle"
                app:layout_constraintStart_toStartOf="@id/rowTitle"
                app:layout_constraintEnd_toStartOf="@id/rowDelete"
                android:layout_marginTop="6dp"/>

        <TextView
                android:id="@+id/rowBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textSecondary"
                android:textSize="11sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/rowUrl"
                app:layout_constraintStart_toStartOf="@id/rowUrl"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/rowDelete"
                style="@style/Widget.Simple.IconBtn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="âœ•"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
